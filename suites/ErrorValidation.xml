<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite parallel="tests" name="All Test Suite">

<groups>
    <run>
        <include name="ErrorHandling"/>
    </run>
</groups>
    <test verbose="2" preserve-order="true" name="Submit order">
        <classes>
            <class name="org.prueba.SubmitOrderTest">
                <methods>
                    <include name="submitOrder"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="Error Validation Test">
        <classes>
            <class name="org.prueba.errorValidations">
                <methods>
                </methods>
            </class>
        </classes>
    </test>
</suite>